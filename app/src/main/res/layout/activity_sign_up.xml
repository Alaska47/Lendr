<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    tools:context="com.akotnana.lendr.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:paddingTop="25dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="24dp"
        android:paddingLeft="24dp"
        android:gravity="center"
        android:paddingRight="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Lendr"
            android:layout_gravity="center"
            android:textSize="96sp"
            android:textColor="@color/white"/>

        <!-- Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_white_24dp"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_email_white_24dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_lock_white_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/show_credit_dialog"
            android:backgroundTint="#5ED086"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="ADD CREDIT CARD"/>


        <!--
        <Button
            android:id="@+id/sign_up"
            android:backgroundTint="@color/colorPrimaryLight"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="25dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="SIGN UP"/>
        -->

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:background="@drawable/shape_default"
            android:backgroundTint="@color/colorPrimaryLight"
            android:layout_height="wrap_content"
            app:spinning_bar_color="#FFFFFFFF"
            android:layout_marginTop="15dp"
            app:spinning_bar_padding="8dp"
            app:spinning_bar_width="3dp"
            app:initialCornerAngle="50dp"
            app:finalCornerAngle="50dp"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/switch_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@color/white_overlay"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="-5dp"
            android:paddingTop="-5dp"
            android:stateListAnimator="@null"
            android:text="ALREADY HAVE AN ACCOUNT?"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="14sp" />



    </LinearLayout>

</RelativeLayout>
